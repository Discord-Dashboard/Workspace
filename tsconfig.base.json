{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",                // The JavaScript version to compile to
    "module": "ESNext",                 // Use modern ES module system
    "moduleResolution": "Node",         // Use Node-style module resolution
    "strict": true,                     // Enable strict type-checking options
    "esModuleInterop": true,            // Enable compatibility with CommonJS modules
    "skipLibCheck": true,               // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure file names are case-consistent
    "declaration": true,                // Generate .d.ts files
    "declarationMap": true,
    "sourceMap": true                  // Generate source maps for debugging
  }
}
